@model DemoMVC.Models.BMI

@{
    ViewData["Title"] = "BMI Calculator";
}

<h2>BMI Calculator</h2>

<form asp-action="Index" method="post">
    <div>
        <label asp-for="Gender">Gender</label>
        <select asp-for="Gender" asp-items="new SelectList(new List<string> "Male")>
            <option value="">Select Gender</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Height">Height (meters)</label>
        <input asp-for="Height" type="number" step="0.01" />
        <span asp-validation-for="Height" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Weight">Weight (kg)</label>
        <input asp-for="Weight" type="number" step="0.1" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>
    <button type="submit">Calculate BMI</button>
</form>

@if (ViewBag.BMIModel != null)
{
    <h3>Result:</h3>
    <p>@ViewBag.BMIModel</p>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}